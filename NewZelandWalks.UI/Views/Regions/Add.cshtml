@model NewZelandWalks.UI.Models.AddRegionViewModel 
@{
}
@* Création le formuaire d'envoi des données *@
<h1 class="mt-3">Add Region</h1>

<form method="post">
    <div class="mt-3">
        <label class="col-form-label">Code</label>
        <input type="text" class="form-control" asp-for="Code" />
    </div>

    <div class="mt-3">
        <label class="col-form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="col-form-label">Image Url</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
